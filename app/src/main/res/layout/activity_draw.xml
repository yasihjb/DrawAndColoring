<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawingActivity"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/draw"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/button_back"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/button_save"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/ic_save"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:id="@+id/toolbox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/toolbox_style"
            android:padding="@dimen/_5sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >
                <ImageView
                    android:id="@+id/pallet"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_pallete"
                    android:layout_marginStart="0dp"
                  />

                <ImageView
                    android:id="@+id/pencil"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/pallet"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_pencil" />

                <ImageView
                    android:id="@+id/undo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pencil"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_undo"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:id="@+id/redo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/undo"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_redo" />

                <ImageView
                    android:id="@+id/eraser"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/redo"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_eraser" />
                <ImageView
                    android:id="@+id/eyedropper"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/eraser"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_eyedropper" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/draw_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/toolbox"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            >

            <RelativeLayout
                android:id="@+id/draw_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>