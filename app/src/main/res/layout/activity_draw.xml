<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawingActivity"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/draw"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/button_back"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/button_save"
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:src="@drawable/ic_save"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eraser_toolbox"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/eraser_popup_dialog_shape"
            android:layout_above="@id/toolbox"
            android:layout_marginEnd="@dimen/_100sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">
            <SeekBar
                android:id="@+id/eraser_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:max="100"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:progressDrawable="@drawable/eraser_seekbar_style"
                android:thumb="@drawable/eraser_thumb"
                android:indeterminate="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/eraser_seekbar"
                app:layout_constraintBottom_toTopOf="@id/clear_bg"
                android:paddingHorizontal="@dimen/_12sdp">
                <RelativeLayout
                    android:id="@+id/eraser_round_line"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:layout_weight="1"
                    android:background="@drawable/eraser_round_line"
                    android:visibility="visible"
                    >
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/clear_bg"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:src="@drawable/ic_clear_bg_white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                android:clickable="true"
                android:focusable="true"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pencil_toolbox"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/pencil_popup_dialog_shape"
            android:layout_above="@id/toolbox"
            android:layout_marginStart="@dimen/_95sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:focusable="true"
            android:clickable="true"
            android:visibility="gone"
            >
            <SeekBar
                android:id="@+id/pencil_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:progress="0"
                android:progressDrawable="@drawable/pencil_seekbar_style"
                android:thumb="@drawable/pencil_thumb"
                android:indeterminate="false"
                tools:ignore="MissingConstraints" />
            <LinearLayout
                android:id="@+id/pencil_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pencil_seekbar"
                app:layout_constraintBottom_toTopOf="@id/pencil_shape"
                android:paddingHorizontal="@dimen/_12sdp">
                <RelativeLayout
                    android:id="@+id/round_line"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:layout_weight="1"
                    android:background="@drawable/round_line"
                    android:visibility="visible"
                    >
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/square_line"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:layout_weight="1"
                    android:background="@drawable/square_line"
                    android:visibility="gone"
                    >
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pencil_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <RelativeLayout
                    android:id="@+id/select_circle"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="@dimen/_60sdp"
                    />
                <RelativeLayout
                    android:id="@+id/select_square"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/square"
                    android:clickable="true"
                    android:focusable="true"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/toolbox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/toolbox_style"
            android:padding="@dimen/_5sdp"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                >

                <ImageView
                    android:id="@+id/pallet"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_palette" />

                <ImageView
                    android:id="@+id/pencil"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/pallet"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_brush_pencil" />

                <ImageView
                    android:id="@+id/undo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pencil"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_undo"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:id="@+id/redo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/undo"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_redo" />

                <ImageView
                    android:id="@+id/eraser"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/redo"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_eraser" />
                <ImageView
                    android:id="@+id/eyedropper"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/eraser"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/img_eyedropper" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/draw_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/toolbox"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            >

            <RelativeLayout
                android:id="@+id/draw_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>